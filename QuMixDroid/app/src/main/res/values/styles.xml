<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.DeviceDefault">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomToggleButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>        
    </style>
    
    <style name="MuteButton" parent="CustomToggleButton">
        <item name="android:background">@drawable/toggle_enabled_red</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textOff">@string/mute</item>
        <item name="android:textOn">@string/mute</item>
        </style>
    
    <style name="AssignButton" parent="CustomToggleButton">
        <item name="android:background">@drawable/toggle_enabled_green</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textOff">@string/assign</item>
        <item name="android:textOn">@string/assign</item>
    </style>

    <style name="LayerButton" parent="CustomToggleButton">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/toggle_enabled_green</item>
    </style>
    
    <style name="PreButton" parent="CustomToggleButton">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/toggle_enabled_green</item>
        <item name="android:textOff">@string/pre</item>
        <item name="android:textOn">@string/pre</item>
        </style>

    <style name="PaflButton" parent="CustomToggleButton">
        <item name="android:textColor">#ff000000</item>
        <item name="android:background">@drawable/toggle_enabled_yellow</item>
        <item name="android:textOff">@string/pafl</item>
        <item name="android:textOn">@string/pafl</item>
        </style>

    <style name="PanButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
        
    <style name="Fader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>        
    </style>
    
</resources>
